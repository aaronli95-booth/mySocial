<% content_for :title, "Create New Post" %>

<div class="min-h-screen bg-white flex items-center justify-center">
  <div class="w-full max-w-2xl px-4">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Create New Post</h1>
      <%= link_to "Back to Posts", posts_path, class: "bg-orange-500 hover:bg-orange-600 text-white font-medium py-2 px-4 rounded-md ml-8" %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <%= render "form", post: @post %>
    </div>
  </div>
</div>
