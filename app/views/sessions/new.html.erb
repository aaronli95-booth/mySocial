<% @classes_for_body = "bg-white" %>

<div class="w-full h-screen flex flex-col items-center justify-start bg-white">
  <!-- Logo Section -->
  <div class="mt-10">
    <%= image_tag('mySocial_logo.png', alt: 'mySocial Logo', size: '400x400') %>
  </div>

  <!-- Sign In Form -->
  <div class="w-full max-w-md mt-8 px-4">
    <% if notice = flash[:notice] %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg text-center" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="text-3xl text-gray-700 text-center mb-8 font-light tracking-wide">SIGN IN</h1>

    <%= form_with url: session_url, class: "space-y-6" do |form| %>
      <div>
        <%= form.email_field :email_address, 
            required: true, 
            autofocus: true, 
            autocomplete: "username", 
            placeholder: "Enter your email address", 
            value: params[:email_address], 
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:border-orange-500 placeholder-gray-600 text-gray-800" %>
      </div>

      <div>
        <%= form.password_field :password, 
            required: true, 
            autocomplete: "current-password", 
            placeholder: "Enter your password", 
            maxlength: 72, 
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:border-orange-500 placeholder-gray-600 text-gray-800" %>
      </div>

      <div class="flex flex-col items-center space-y-4">
        <%= form.submit "Sign In", 
            class: "w-full text-white bg-orange-500 hover:bg-orange-600 rounded-lg px-6 py-3 shadow-lg transition duration-300" %>
        
        <div class="text-center space-y-2">
          <%= link_to "Create Account", new_registrations_path, 
              class: "text-orange-500 hover:text-orange-600 transition duration-300" %>
          <div class="text-sm text-gray-500">
            <%= link_to "Forgot password?", new_password_path, 
                class: "text-gray-600 hover:text-gray-800 transition duration-300" %>
          </div>
          <% if alert = flash[:alert] %>
            <p class="py-2 px-3 bg-red-50 text-red-500 font-medium rounded-lg text-center mt-2" id="alert"><%= alert %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
